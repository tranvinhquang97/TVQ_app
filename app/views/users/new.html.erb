<% provide(:title, t("users.new.title")) %>
<h1><%= t ".title" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
   <%= form_for(@user, url: signup_path) do |f| %>
      <%= render "shared/error_messages" %>
      <%= f.label :name, t("users.new.name") %>
      <%= f.text_field :name %>

      <%= f.label :email, t("users.new.email") %>
      <%= f.email_field :email %>

      <%= f.label :password, t("users.new.pass") %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, t("users.new.passcf")%>
      <%= f.password_field :password_confirmation %>

      <%= f.submit t("users.new.creat"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
